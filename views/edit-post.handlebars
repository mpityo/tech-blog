<section class="mt-3 container">
<div class="page-header mb-2">
    <h1>Dashboard</h1>
</div>
<a href="/dashboard"> &larr; Back to dashboard</a>

<section class="card bg-light mb-4 mt-4">
  <h2 class="card-title ms-4 pt-2">
    Edit Post
  </h2>
  <form class="edit-post-form new-post-form card-body">
    <div>
      <input class="form-control" name="post-title" type="text" value="{{post.title}}" style="max-width: 600px;" />
    </div>
    <div>
      <textarea class="form-control mt-2" name="post-content" id="post-content">{{post.content}}</textarea>
    </div>
    <div class="text-muted">
      By you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-md btn-success mt-3">Save post</button>
    <button type="button" class="delete-post-btn btn btn-md btn-danger mt-3">Delete post</button>
  </form>
</article>
</section>

<section>
  <h2>Comments</h2>
  {{> comments post.comments}}
<form class="comment-form mt-3">
  <div>
    <textarea name="comment-body" class="form-control" name="comment-body" placeholder="comment text" style="max-width: 700px;"></textarea>
  </div>
  <div>
    <button type="submit" class="btn btn-md btn-secondary mt-3">add comment</button>
  </div>
</form>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>