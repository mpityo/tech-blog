<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="d-flex flex-column h-100">
    <div class="wrapper flex-shrink-0">
      <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-md">
          
          <a class="navbar-brand" href="/">
            <img
              src="/images/logo.jpg"
              alt=""
              width="45"
              height="39"
              class="d-inline-block align-text-center"
            />
            Tech Blog
          </a>

          <div class="" id="navbarNav">
            <ul class="navbar-nav">
              {{#if loggedIn}}
                <li class="nav-item">
                  <a class="nav-link active" href="/dashboard">dashboard</a>
                </li>
                <li class="nav-item">
                  <button
                    class="btn btn-outline-danger"
                    id="logout"
                  >logout</button>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link active" href="/login">login</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-info" href="/sign-up">sign-up</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
      <main>
        {{{body}}}
      </main>
    </div>
    <footer class="navbar navbar-expand mt-auto py-3 bg-light">
        <div class="container-fluid">
        <p class="text-muted">Made with &hearts; by 
          <a class="link" href="https://www.github.com/mpityo" target="_blank">Matt Pityo</a>
        </p>
        <p>&COPY;2022</p>
        </div>
      </footer>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}

  </body>

</html>