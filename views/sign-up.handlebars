<div class="form-signin text-center w-50 m-auto pt-5">
    <h1 class="h3 mb-3 fw-normal">Please enter the following information</h1>
<form class="signup-form card-body">
    <div class="form-floating">
        <input type="text" class="form-control" id="username-signup" placeholder="username"/>
        <label for="username-signup">Username</label>
    </div>
    <div class="form-floating">
        <input type="email" class="form-control" id="email-signup" placeholder="name@example.com" />
        <label for="email-signup">Email Address</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password-signup" placeholder="Password"/>
        <label for="password-signup">Password</label>
    </div>
    <button class="w-100 btn btn-lg btn-info" type="submit">Sign up</button>
</form>
<a class="link" href="/login">Or login instead</a>
</div>
<script src="/javascript/sign-up.js"></script>