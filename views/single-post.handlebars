<section class="container mt-4">
{{> post-info post }}

<section class="mt-3">
  <h2>Comments</h2>
{{> comments post.comments}}
{{#if loggedIn}}
<form class="comment-form mt-3">
  <div>
    <textarea name="comment-body" class="form-control" name="comment-body" placeholder="comment text" style="max-width: 700px;"></textarea>
  </div>
  <div>
    <button type="submit" class="btn btn-md btn-secondary mt-3">add comment</button>
  </div>
</form>
</section>
{{/if}}
</section>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}